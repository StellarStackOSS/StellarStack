{
  "name": "stellarstack",
  "version": "1.3.9",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:api": "turbo build --filter=@workspace/api",
    "build:web": "turbo build --filter=web",
    "build:home": "turbo build --filter=home",
    "build:docs": "turbo build --filter=docs",
    "build:ui": "turbo build --filter=@stellarUI...",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,css}\"",
    "start:api": "pnpm --filter @workspace/api start",
    "start:web": "pnpm --filter web start",
    "start:docs": "pnpm --filter docs start -p 8080",
    "start:home": "pnpm --filter home start -p 8080",
    "typecheck": "turbo typecheck",
    "storybook": "pnpm --filter storybook dev",
    "build:desktop": "node apps/desktop/build.mjs",
    "dev:desktop": "node apps/desktop/build.mjs --dev",
    "test": "vitest run --passWithNoTests",
    "test:jsdom": "vitest run --project @stellarUI --passWithNoTests",
    "test:dom": "vitest run --project web --passWithNoTests",
    "test:node": "vitest run --project @workspace/api --passWithNoTests"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jscpd": "^4.0.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
