{
  "name": "@workspace/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "pnpm prisma generate",
    "db:generate": "pnpm prisma generate",
    "db:push": "pnpm prisma db push",
    "db:migrate": "pnpm prisma migrate dev",
    "db:studio": "pnpm prisma studio",
    "db:version": "pnpm prisma --version",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "tsx src/index.ts",
    "db:init": "prisma init",
    "db:seed": "tsx prisma/seed.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.9",
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.2.0",
    "@prisma/client": "6.19.2",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.1.14",
    "dotenv": "^16.4.7",
    "hono": "^4.6.16",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.12",
    "tsx": "^4.19.2",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.4",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.24.2",
    "prisma": "6.19.2",
    "typescript": "^5.7.2"
  }
