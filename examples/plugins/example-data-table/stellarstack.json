{
  "pluginId": "example-data-table",
  "name": "Example: Player Manager",
  "version": "1.0.0",
  "description": "Example plugin demonstrating a data table UI schema for displaying and managing player data",
  "author": "StellarStack Community",
  "license": "MIT",
  "category": "example",
  "gameTypes": ["minecraft"],
  "permissions": ["activity.read", "console.send"],
  "ui": {
    "serverTabs": [
      {
        "id": "players",
        "label": "Players",
        "icon": "users",
        "uiSchema": {
          "type": "data-table",
          "title": "Online Players",
          "loadAction": "fetch-players",
          "columns": [
            {
              "id": "username",
              "label": "Player Name",
              "format": "text",
              "sortable": true,
              "width": "30%"
            },
            {
              "id": "joinTime",
              "label": "Join Date",
              "format": "date",
              "sortable": true,
              "width": "20%"
            },
            {
              "id": "playTime",
              "label": "Play Time",
              "format": "text",
              "sortable": true,
              "width": "20%"
            },
            {
              "id": "level",
              "label": "Level",
              "format": "number",
              "sortable": true,
              "width": "15%"
            },
            {
              "id": "isOnline",
              "label": "Status",
              "format": "boolean",
              "sortable": true,
              "width": "15%"
            }
          ],
          "pagination": {
            "pageSize": 20
          },
          "actions": [
            {
              "id": "kick",
              "label": "Kick",
              "icon": "ban",
              "actionId": "kick-player",
              "dangerous": false
            },
            {
              "id": "ban",
              "label": "Ban",
              "icon": "lock",
              "actionId": "ban-player",
              "dangerous": true,
              "confirmation": "Are you sure you want to ban this player?"
            },
            {
              "id": "teleport",
              "label": "Teleport To",
              "icon": "location",
              "actionId": "teleport-to-player",
              "dangerous": false
            }
          ]
        }
      }
    ]
  },
  "actions": [
    {
      "id": "fetch-players",
      "label": "Fetch Players",
      "description": "Load list of online and recent players",
      "operations": []
    },
    {
      "id": "kick-player",
      "label": "Kick Player",
      "description": "Kick a player from the server",
      "params": [
        {
          "id": "id",
          "label": "Player ID",
          "type": "string",
          "required": true
        },
        {
          "id": "reason",
          "label": "Kick Reason",
          "type": "string",
          "default": "Kicked by admin"
        }
      ],
      "operations": [
        {
          "type": "send-command",
          "command": "kick {{id}} {{reason}}"
        }
      ]
    },
    {
      "id": "ban-player",
      "label": "Ban Player",
      "description": "Permanently ban a player from the server",
      "dangerous": true,
      "params": [
        {
          "id": "id",
          "label": "Player ID",
          "type": "string",
          "required": true
        },
        {
          "id": "reason",
          "label": "Ban Reason",
          "type": "string",
          "required": true
        }
      ],
      "operations": [
        {
          "type": "send-command",
          "command": "ban {{id}} {{reason}}"
        }
      ]
    },
    {
      "id": "teleport-to-player",
      "label": "Teleport to Player",
      "description": "Teleport an admin to a player's location",
      "params": [
        {
          "id": "id",
          "label": "Player ID",
          "type": "string",
          "required": true
        },
        {
          "id": "adminName",
          "label": "Admin Name",
          "type": "string",
          "required": true
        }
      ],
      "operations": [
        {
          "type": "send-command",
          "command": "tp {{adminName}} {{id}}"
        }
      ]
    }
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "pageSize": {
        "type": "number",
        "title": "Page Size",
        "description": "Number of players per page",
        "minimum": 5,
        "maximum": 100,
        "default": 20
      },
      "refreshInterval": {
        "type": "number",
        "title": "Refresh Interval (seconds)",
        "minimum": 5,
        "default": 30
      }
    }
  },
  "defaultConfig": {
    "pageSize": 20,
    "refreshInterval": 30
  }
}
