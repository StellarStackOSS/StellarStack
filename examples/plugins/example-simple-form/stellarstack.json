{
  "pluginId": "example-simple-form",
  "name": "Example: Simple Settings Form",
  "version": "1.0.0",
  "description": "Example plugin demonstrating a simple form UI schema for server settings",
  "author": "StellarStack Community",
  "license": "MIT",
  "category": "example",
  "gameTypes": ["*"],
  "permissions": ["control.*"],
  "ui": {
    "serverTabs": [
      {
        "id": "settings",
        "label": "Settings",
        "icon": "gear",
        "uiSchema": {
          "type": "form",
          "title": "Server Settings",
          "description": "Configure your server settings",
          "fields": [
            {
              "id": "serverName",
              "label": "Server Name",
              "type": "string",
              "required": true,
              "placeholder": "Enter server name",
              "description": "The display name for your server"
            },
            {
              "id": "maxPlayers",
              "label": "Max Players",
              "type": "number",
              "required": true,
              "min": 1,
              "max": 1000,
              "default": 10,
              "description": "Maximum number of concurrent players"
            },
            {
              "id": "pvpEnabled",
              "label": "Enable PvP",
              "type": "boolean",
              "default": true,
              "description": "Allow player-vs-player combat"
            },
            {
              "id": "difficulty",
              "label": "Difficulty",
              "type": "select",
              "required": true,
              "default": "normal",
              "options": [
                { "label": "Peaceful", "value": "peaceful" },
                { "label": "Easy", "value": "easy" },
                { "label": "Normal", "value": "normal" },
                { "label": "Hard", "value": "hard" }
              ],
              "description": "Server difficulty level"
            },
            {
              "id": "motd",
              "label": "Message of the Day",
              "type": "textarea",
              "placeholder": "Enter welcome message",
              "rows": 3,
              "description": "Message shown to players when they join"
            }
          ],
          "submitAction": "save-settings",
          "loadAction": "load-settings",
          "submitLabel": "Save Settings",
          "successMessage": "Settings saved successfully!"
        }
      }
    ]
  },
  "actions": [
    {
      "id": "load-settings",
      "label": "Load Settings",
      "description": "Load current server settings",
      "operations": []
    },
    {
      "id": "save-settings",
      "label": "Save Settings",
      "description": "Save updated server settings",
      "params": [
        { "id": "serverName", "label": "Server Name", "type": "string", "required": true },
        { "id": "maxPlayers", "label": "Max Players", "type": "number", "required": true },
        { "id": "pvpEnabled", "label": "PvP Enabled", "type": "boolean" },
        { "id": "difficulty", "label": "Difficulty", "type": "string" },
        { "id": "motd", "label": "MOTD", "type": "string" }
      ],
      "operations": [
        {
          "type": "send-command",
          "command": "setprop difficulty {{difficulty}}"
        },
        {
          "type": "send-command",
          "command": "setprop max-players {{maxPlayers}}"
        },
        {
          "type": "send-command",
          "command": "say Server settings updated by {{username}}"
        }
      ]
    }
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "autoSave": {
        "type": "boolean",
        "title": "Auto-save Settings",
        "description": "Automatically save settings on change",
        "default": true
      }
    }
  },
  "defaultConfig": {
    "autoSave": true
  }
}
