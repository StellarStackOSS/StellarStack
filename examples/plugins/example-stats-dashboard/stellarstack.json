{
  "pluginId": "example-stats-dashboard",
  "name": "Example: Server Statistics Dashboard",
  "version": "1.0.0",
  "description": "Example plugin demonstrating a stats UI schema for displaying server metrics and analytics",
  "author": "StellarStack Community",
  "license": "MIT",
  "category": "example",
  "gameTypes": ["*"],
  "permissions": ["activity.read"],
  "ui": {
    "serverTabs": [
      {
        "id": "stats",
        "label": "Statistics",
        "icon": "chart",
        "uiSchema": {
          "type": "stats",
          "loadAction": "fetch-stats",
          "items": [
            {
              "id": "playerCount",
              "label": "Current Players",
              "icon": "users",
              "format": "number",
              "trend": "up"
            },
            {
              "id": "peakPlayers",
              "label": "Peak Players (24h)",
              "icon": "trending-up",
              "format": "number"
            },
            {
              "id": "uptime",
              "label": "Server Uptime",
              "icon": "clock",
              "format": "duration"
            },
            {
              "id": "tps",
              "label": "Ticks Per Second",
              "icon": "zap",
              "format": "number",
              "trend": "up"
            },
            {
              "id": "cpuUsage",
              "label": "CPU Usage",
              "icon": "cpu",
              "format": "percentage"
            },
            {
              "id": "memoryUsage",
              "label": "Memory Usage",
              "icon": "memory",
              "format": "percentage",
              "trend": "down"
            },
            {
              "id": "chunkLoadTime",
              "label": "Chunk Load Time",
              "icon": "layers",
              "format": "duration"
            },
            {
              "id": "totalPlayTime",
              "label": "Total Play Time",
              "icon": "hourglass",
              "format": "duration"
            }
          ]
        }
      }
    ]
  },
  "actions": [
    {
      "id": "fetch-stats",
      "label": "Fetch Server Statistics",
      "description": "Load current server statistics and metrics",
      "operations": []
    }
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "refreshInterval": {
        "type": "number",
        "title": "Refresh Interval (seconds)",
        "description": "How often to refresh statistics",
        "minimum": 10,
        "default": 30
      },
      "showTrends": {
        "type": "boolean",
        "title": "Show Trends",
        "description": "Display trend indicators on metrics",
        "default": true
      }
    }
  },
  "defaultConfig": {
    "refreshInterval": 30,
    "showTrends": true
  }
}
